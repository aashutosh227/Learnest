    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="20dp"
        android:paddingHorizontal="5dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gradStart"
        android:layout_gravity="left|center"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/list"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div1"
        android:paddingVertical="10dp"
        android:id="@+id/progress_rellay"
        android:background="@color/white">

        <TextView
            android:id="@+id/rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="In Progress"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout
            android:id="@+id/rv_catg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_title"
            android:paddingHorizontal="0dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/c_plus"
                android:elevation="5dp"
                android:id="@+id/progress_img"/>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/progress_img"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="80dp"
                    android:gravity="right"
                    android:text="see all"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course: 9hr"
                    android:textSize="14dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C++ Programming - From Scratch"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_catg1"
            android:paddingHorizontal="0dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/java"
                android:elevation="5dp"
                android:id="@+id/progress_img1"/>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/progress_img1"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course: 9hr"
                    android:textSize="14dp"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAVA Programming - From Scratch"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>